package my.group.mapreduce;

import com.aliyun.odps.data.Record;
import com.aliyun.odps.mapred.Mapper;

import java.io.IOException;

/**
 * Mapper模板。请用真实逻辑替换模板内容
 */
public class MyMapper implements Mapper {
//    private Record word;
//    private Record one;
	private Record key;
	private Record value;

    public void setup(TaskContext context) throws IOException {
//        word = context.createMapOutputKeyRecord();
//        one = context.createMapOutputValueRecord();
//        one.setBigint(0, 1L);
    	key = context.createMapOutputKeyRecord();
    	value = context.createMapOutputValueRecord();
    }

    public void map(long recordNum, Record record, TaskContext context) throws IOException {
//        String w = record.getString(0);
//        word.setString(0, w);
//        context.write(word, one);
    	String w1 = record.getString(0);
    	String w2 = record.getString(1);
    	String w3 = record.getString(2);
    	String w4 = record.getString(5);
    	key.set("user_id", record.getString(0));
    	key.set("item_id", record.getString(1));
    	value.set("behavior_type", record.getString(2));
    	value.set("time", record.getString(5));
    	context.write(key, value);
    	System.out.println("map worker end");
    }

    public void cleanup(TaskContext context) throws IOException {

    }
}